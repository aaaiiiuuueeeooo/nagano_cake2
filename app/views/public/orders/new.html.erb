<div>注文情報入力</div>
<div>支払方法</div>
<%= form_with model: @order, url: confilm_path, method: :post do |f| %>
<div>
    <%= f.radio_button :payment_method, "credit_card" %>
    <%= f.label :payment_method, "クレジットカード" %>
</div>
<div>
    <%= f.radio_button :payment_method, "銀行振込" %>
    <%= f.label :payment_method,  "銀行振込" %>
</div>
<div>お届け先</div>
<div>
    <%= f.radio_button :address_flag, :ご自身の住所 %>
    <%= f.label :address_flag, value: "ご自身の住所" %>
    <%= current_customer.postal_code %> <%= current_customer.address %> <%= current_customer.fullname %>
</div>
<div>
    <%= f.radio_button :address_flag, :登録済住所から選択 %>
    <%= f.label :address_flag, value: "登録済住所から選択" %>
    <%= f.collection_select :address, Address.all, :id, :full_address %>
</div>
<div>
    <%= f.radio_button :address_flag, :新しいお届け先 %>
    <%= f.label :address_flag, value: "新しいお届け先" %>
    <%= f.label :postal_code, "郵便番号（ハイフンなし）" %> <%= f.text_field :postal_code %>
    <%= f.label :address, "住所" %> <%= f.text_field :address %>
    <%= f.label :name, "宛名" %> <%= f.text_field :name %>
</div>
<div><%= f.submit "確認画面へ進む" %> </div>
<% end %>