<div>ショッピングカート</div><div><%= link_to "カートを空にする",destroy_all_path, method: :delete %></div>
<table class="table">
  <thead></thead>
  <tbody>
    <% @cart_item.each do |cart_item| %>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
    <tr>
      <th><%= cart_item.item_id %></th>
      <th><%= cart_item.item.price %></th>
      <th><%= cart_item.amount %></th>
      <th><%= cart_item.subtotal %></th>
      <th><%= link_to "削除する",cart_item, method: :delete %></th>
    </tr>
    <%= link_to "買い物を続ける", items_path %>
     <p>合計金額</p> <%= @total_payment += cart_item.subtotal %>
