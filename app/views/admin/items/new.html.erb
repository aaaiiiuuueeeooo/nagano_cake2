商品新規登録画面
<div>
  <div class="container">
    <%= form_with model: @item,url: admin_items_path, method: :post, local: true do |form| %>
    <div>
      <%= form.label :name, "商品名" %>  <%= form.text_field :name %>
    </div>
    <div>
     <%= form.label :introduction, "商品説明" %> <%= form.text_area :introduction %>
    </div>
    <div>
      <%= form.label :genre_id, "ジャンル" %><%= form.collection_select :genre_id, Genre.all, :id, :name %>
    </div>
    <div>
      <%= form.label :price, "税抜価格" %><%= form.number_field :price %>
    </div>
    <div>
      <%= form.label :is_active, "販売ステータス" %><%= form.radio_button :is_active, :true %><%= form.label :is_active, "販売中", value: true %>
      <%= form.radio_button :is_active, :false %><%= form.label :is_active, "販売停止中", value: false %>
    </div>
    <div>
      <%= form.submit '新規登録' %>
    </div>
    <% end %>
  </div>
</div>