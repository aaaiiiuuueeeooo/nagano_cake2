<div class="container">
  <div class="row mt-2">
    <div class="col-mid-2 offset-md-2"><%= @customer.id %>さんの会員情報編集</div>
  </div>
  <%= form_with model: @customer,url: admin_customer_path, method: :patch, local: true do |form| %>
  <table class="table table-borderless">
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
      <td></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= form.text_field :last_name,class:"form-control" %></td>
      <td><%= form.text_field :first_name,class:"form-control" %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= form.text_field :last_name_kana,class:"form-control" %></td>
      <td><%= form.text_field :first_name_kana,class:"form-control" %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= form.text_field :postal_code,class:"form-control" %></td>
      <td></td>
    </tr>
    <tr>
      <td>住所</td>
      <td colspan="2"><%= form.text_field :address,class:"form-control" %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= form.text_field :telephone_number,class:"form-control" %></td>
      <td></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= form.text_field :email,class:"form-control" %></td>
      <td></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td><%= form.radio_button :is_active, :true %> <%= form.label :is_active, "有効", value: true %>
          <%= form.radio_button :is_active, :false %><%= form.label :is_active, "退会", value: false %></td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td><%= form.submit '変更を保存' %></td>
      <td></td>
    </tr>
  </table>
  <% end %>
</div>
